@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Index";
}
<style>
    .custom-card {
        background-color: #0b132b;
        color: white;
        border: none;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3);
        padding: 20px;
        height: 100%;
    }

        .custom-card h3.card-title {
            font-size: 24px;
            margin-bottom: 15px;
        }

        .custom-card p.card-text {
            font-size: 18px;
        }

        .custom-card a.btn-primary {
            background-color: #2a9d8f;
            border-color: #2a9d8f;
        }

            .custom-card a.btn-primary:hover {
                background-color: #1a7a6c;
                border-color: #1a7a6c;
            }
</style>


<div class="row">
    <div class="col-5 m-4 ml-5">
        <div class="card custom-card">
            <div class="card-body">
               
                    <div class="alert alert-warning">
                        <strong>Activated!</strong> @TempData["MessAct"]
                    </div>
              
                <p class="card-text">If you want to activate the contest form, click the button below:</p>
                <a href="@Url.Action("ActivateForm", "Admin")" class="btn btn-primary btn-lg btn-block">Activate Form</a>
            </div>
        </div>
    </div>
    <div class="col-5 ml-5 my-4">
        <div class="card custom-card">
            <div class="card-body">
                
                    <div class="alert alert-warning">
                        <strong>Deactivated!</strong> @TempData["MessDe"]
                    </div>
               
                <p class="card-text">If you want to deactivate the contest form, click the button below:</p>
                <a href="@Url.Action("DeactivateForm", "Admin")" class="btn btn-primary btn-lg btn-block">Deactivate Form</a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-5 m-4 ml-5">
        <div class="card custom-card">
            <div class="card-body">

                <div class="alert alert-warning">
                    <strong>Winners!</strong> @TempData["MessActWinner"]
                </div>

                <p class="card-text">If you want to Show Winners, click the button below:</p>
                <a href="@Url.Action("ActivateWinners", "Admin")" class="btn btn-primary btn-lg btn-block">Activate Winners</a>
            </div>
        </div>
    </div>
    <div class="col-5 ml-5 my-4">
        <div class="card custom-card">
            <div class="card-body">

                <div class="alert alert-warning">
                    <strong>Deactivated!</strong> @TempData["MessDeWinner"]
                </div>

                <p class="card-text">If you want to deactivate Winners, click the button below:</p>
                <a href="@Url.Action("DeactivateWinners", "Admin")" class="btn btn-primary btn-lg btn-block">Deactivate Winners</a>
            </div>
        </div>
    </div>
</div>
