@model IEnumerable<James_Thew.context.User_recepie>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "viewContest";
}

<style>
    .main-container {
        margin: 20px;
    }

    .card-box {
        border: 1px solid #ccc;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        background-color: #fff;
    }

    table.data-table {
        width: 100%;
    }

    .dataTables_wrapper {
        overflow-x: auto;
    }

    .table th,
    .table td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table-plus {
        text-align: center;
    }

    .table img {
        max-width: 70px;
        max-height: 70px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            border-color: #545b62;
        }

    div.dataTables_wrapper div.dataTables_length select {
        width: 60px;
        display: inline-block;
    }
</style>


<h2 class="h4 pd-20">Show Announcement</h2>

<table id="myT" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AspNetUsers.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingrdient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookingProcedure)
            </th>

            <th>
                Tips
            </th>
            

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AspNetUsers.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingrdient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CookingProcedure)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Post)
                </td>
                
                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @using (Html.BeginForm("winner", "Contest", new { id = item.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <input type="hidden" name="User_Id" value="@item.User_Id" />
                        <input type="submit" value="Winner" class="btn btn-warning btn-sm" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>




<!-- Include jQuery and DataTables JavaScript -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#myT').DataTable();
    })
</script>
